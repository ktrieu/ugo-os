    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "QEMU",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/kernel/target/kernel/debug/kernel",
            "processCreateCommands": [
                "shell ./build.sh run",
            ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "QEMU Debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/kernel/target/kernel/debug/kernel",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/kernel/target/kernel/debug/kernel"
            ],
            "processCreateCommands": [
                "shell ./build.sh debug",
            ],
            "postRunCommands": [
                "gdb-remote 1234"
            ]
        }
    ]
}